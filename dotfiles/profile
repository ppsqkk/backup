if test -d "$HOME/bin" && ! echo "$PATH" | grep -q "$HOME/bin"
then
	export PATH="$PATH:$HOME/bin"
fi

if test -d "$HOME/.local/bin" && ! echo "$PATH" | grep -q "$HOME/.local/bin"
then
	export PATH="$PATH:$HOME/.local/bin"
fi

export PAGER=less
export EDITOR=vim
export VISUAL=vim
export BROWSER=firefox
export DOTNET_CLI_TELEMETRY_OPTOUT=1
export FZF_DEFAULT_OPTS='-m --height 40% --layout=reverse --border --info=inline'

export cflags='-D_GNU_SOURCE -pedantic -Wall -g -O2'

setterm -blength 0

if test -n "$BASH" && test -r "$HOME/.bashrc"
then
	. "$HOME/.bashrc"
fi
